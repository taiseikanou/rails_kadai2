<div class="container">
  <%= link_to "プロフィール",users_profile_path, class: "btn btn-warning btn-sm" %>
  <%= link_to "アカウント",users_account_path, class: "btn btn-warning btn-sm" %>
    <div class="show">
    <%= image_tag current_user.get_profile_image(100,100) %>
    <table class="table table-bordered DetailTable">
      <tbody>
        <tr>
          <th scope="row">名前</th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th scope="row">自己紹介</th>
          <td><%= current_user.introduction %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<%= link_to "編集",users_profile_edit_path, class: "btn btn-warning btn-sm" %>