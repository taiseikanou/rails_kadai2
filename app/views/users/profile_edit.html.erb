<div class="container">
  <h3>編集</h3>
  <div class ="FormContainer">
    <%= form_with model: @user,url: users_profile_edit_path(@user), class: "mt-3" do |f| %>
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= f.submit "保存", class: "btn btn-primary mr-2" %>
        <%= link_to "キャンセル", :root, class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
</div>