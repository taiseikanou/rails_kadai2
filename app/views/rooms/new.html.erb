<div class="container">
  <h3>新規登録</h3>
  <div class="FormWrapper">
    <section class="FormWrapper">
      <h2>新規登録</h2>
      <%= form_with model: @room, class: "mt-3" do |f| %>

        <div class="form-group">
          <%= f.label :room_name, "施設名" %>
          <%= f.text_field :room_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :room_detail, "施設詳細" %>
          <%= f.text_area :room_detail, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price, "料金" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="mt-3">
          <%= f.submit "保存", class: "btn btn-primary mr-2" %>
          <%= link_to "キャンセル", root_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </section>
  </div>
</div>
