<div class="container">
  <h3>予定一覧</h3>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        <th>更新</th>
        <th>消去</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td></td>
          <td><%= room.room_name %></td>
          <td><%= room.room_detail %></td>
          <td><%= room.price %></td>
          <td><%= room.updated_at.to_s(:datetime_jp)%></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to "編集", [:edit, room], class: "btn btn-warning btn-sm" %>
              <%= link_to "削除", room_path(room), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>