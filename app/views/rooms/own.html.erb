<div class="container">
  <h3>予定一覧</h3>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        <th>更新</th>
        <th>消去</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
        <% if room.image.attached? %>
          <td><%= image_tag room.image, size: "100x100" %></td>
          <% else %>
          <td><%= image_tag 'no_image', size: "100x100" %></td>
        <% end %>
          <td><%= room.room_name %></td>
          <td><%= room.room_detail %></td>
          <td><%= room.price %></td>
          <td><%= room.updated_at.to_s(:datetime_jp)%></td>
          <td><%= link_to "編集", [:edit, room] %></td>
          <td><%= link_to "削除", room_path(room), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>