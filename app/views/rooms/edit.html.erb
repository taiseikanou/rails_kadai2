<div class="container">
  <h3>編集</h3>
  <div class ="FormContainer">
    <%= form_with model: @room, class: "mt-3" do |f| %>
      <div class="form-group">
        <%= f.label :room_name, "施設名" %>
        <%= f.text_field :room_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :room_detail, "施設詳細" %>
        <%= f.text_area :room_detail, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :price, "料金" %>
        <%= f.number_field :price, class: "form-control" %>
      </div>


      <div class="form-group">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="mt-3">
        <%= f.submit "保存", class: "btn btn-primary mr-2" %>
        <%= link_to "キャンセル", :root, class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
</div>
